                    <li><a class="nav-link scrollto" asp-area="Identity" asp-page="/Account/Register">Register</a></li> *@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="dropdown">
                            <a href="#"><span>Chức năng</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="/HoatDongs">Hoạt Động</a></li>
                                <li><a href="/DangKyHoatDongs">Hoạt Động Đã Đăng Ký</a></li>
