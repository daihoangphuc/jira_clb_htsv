                                            <li><a href="/ChucVus">Chức Vụ</a></li>
                                            <li><a href="/Admin">Reset Password</a></li>
                                            <li> <a asp-area="" asp-controller="SinhViens" asp-action="Index">Sinh Viên</a></li>
                                        </ul>
                                    </li>
                                   

                                }


                            </ul>
                        </li>
                    }

