@model website_CLB_HTSV.Models.TinTuc

@{
    ViewData["Title"] = "Details";
}

<!-- ======= Breadcrumbs ======= -->
<section id="breadcrumbs" class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h2>Tin tức</h2>
            <ol>
                <li><a href="/">Home</a></li>
                <li> Tin tức</li>
            </ol>
        </div>

    </div>
</section><!-- End Breadcrumbs -->
<!-- ======= Portfolio Details Section ======= -->
<section id="portfolio-details" class="portfolio-details">
    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-8 " >
                <div class="portfolio-details-slider swiper" style="border-radius: 20px; width: 85%; height:85%">
                    <div class="swiper-wrapper align-items-center">

                        <div class="swiper-slide">
                            <img src="https://picsum.photos/500" alt="">
                        </div>

                        <div class="swiper-slide">
                            <img src="https://picsum.photos/500" alt="">
                        </div>

                        <div class="swiper-slide">
                            <img src="https://picsum.photos/500" alt="">
                        </div>

                    </div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>

            <div class="col-lg-4" style="margin-top: -10px">
                <div class="portfolio-info">
                    <h3>Thông tin bài đăng</h3>
                    <ul>
                        <li><strong>Người đăng</strong>: @Model.NguoiDang</li>
                     @*    <li><strong>Client</strong>: ASU Company</li> *@
                        <li><strong>Ngày đăng</strong>: @Model.NgayDang.ToString("dd MMMM, yyyy")</li>
                      @*   <li><strong>Project URL</strong>: <a href="#">www.example.com</a></li> *@
                    </ul>
                </div> 
                <div class="portfolio-description">
                    <h2>@Model.TieuDe</h2>
                    <p>
                       @Model.NoiDung
                    </p>
                </div>
            </div>

        </div>

    </div>
</section><!-- End Portfolio Details Section -->
  </main><!-- End #main -->



