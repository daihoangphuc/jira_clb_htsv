<script>
    var text = "Đây là một buổi đồng diễn của CLB chúng ta. CLB Hành Trình Sinh Viên, không chỉ là nơi để gặp gỡ bạn bè mới và chia sẻ sở thích chung, mà còn là một cộng đồng đầy sức mạnh, sự sáng tạo và lòng nhiệt huyết. Chúng tôi tin rằng mỗi sinh viên đều có khả năng vượt qua mình và phát triển không ngừng trong hành trình của mình, và chúng tôi sẵn sàng đồng hành cùng bạn trên con đường đó.";
    var speed = 70;
    var i = 0;
    var scrolled = false;

    function startTyping() {
        var contentPosition = document.getElementById("content").getBoundingClientRect().top;
        var screenPosition = window.innerHeight;

        if (contentPosition < screenPosition && !scrolled) {
            scrolled = true;
            typeWriter();
        }
    }

    function typeWriter() {
        if (i < text.length) {
            document.getElementById("typed-text").innerHTML += text.charAt(i);
            i++;
            setTimeout(typeWriter, speed);
        }
    }

    window.addEventListener('scroll', startTyping);
</script>
