@model website_CLB_HTSV.Models.DangKyHoatDong
@{
    ViewData["Title"] = "Cập nhật minh chứng";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

<form method="post">
    <div class="form-group">
        <label for="hoatDongId">Chọn hoạt động:</label>
        <select class="form-control" id="hoatDongId" name="hoatDongId">
            @foreach (var item in ViewBag.ActivityList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="minhChungLink">Đường dẫn minh chứng:</label>
        <input type="text" class="form-control" id="minhChungLink" name="minhChungLink">
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật minh chứng</button>
</form>