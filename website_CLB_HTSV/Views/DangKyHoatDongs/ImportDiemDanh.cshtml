@model website_CLB_HTSV.Models.DangKyHoatDong

@{
    ViewData["Title"] = "Import Điểm Danh";
}

<h1>@ViewData["Title"]</h1>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="hoatDongId">Chọn Hoạt Động:</label>
        <select id="hoatDongId" name="hoatDongId" class="form-control">
            <option value="">Chọn hoạt động</option>
            @foreach (var item in ViewBag.ActivityList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="file">Chọn File Excel:</label>
        <input type="file" id="file" name="file" class="form-control-file">
    </div>
    <button type="submit" class="btn btn-primary">Import</button>
</form>
